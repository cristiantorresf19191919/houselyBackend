{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-implicit-any": false,
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "build/**"
    ]
  }
}
